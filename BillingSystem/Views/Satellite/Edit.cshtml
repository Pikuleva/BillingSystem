@model SatelliteFormModel

@{
    ViewBag.Title = "Редактиране";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-steps/1.1.0/jquery.steps.min.js"></script>
<div class="wrapper">
    <form asp-action="Edit" method="post">
        <div id="wizard">
            <section>
                <div asp-for="@Model.Name" class="form-row">
                    <input asp-for="@Model.Name" type="text" class="form-control" placeholder="@Model.Name">
                </div>
                <span asp-validation-for="@Model.Name" class="small text-danger"></span>
                <div asp-for="SerialNumber" class="form-row">
                    <input asp-for="@Model.SerialNumber" type="text" class="form-control" placeholder="SerialNumber">
                </div>
                <span asp-validation-for="SerialNumber" class="small text-danger"></span>
                <div class="form-group">
                    <label asp-for="ProductModelId"></label>
                    <select asp-for="ProductModelId" class="form-control">
                        @foreach (var product in Model.Product)

                        {
                            <option value="@product.Id">@product.Name - @product.Price лв</option>
                        }
                    </select>
                    <span asp-validation-for="ProductModelId" class="small text-danger"></span>
                </div>

                <p class="mb-0 text-start">Активна услуга до : @Model.ActiveUntilDate</p>
                <div class="mb-3">
                    <label asp-for="@Model.ActiveUntilDate" class="form-label-add-edit">Плащане до:</label>
                    <input asp-for="@Model.ActiveUntilDate" class="form-control" aria-required="true" value="@Model.ActiveUntilDate.AddMonths(1).ToString("yyyy-MM-dd H:mm")" />
                    <span asp-validation-for="@Model.ActiveUntilDate" class="text-danger"></span>
                </div>
                <div class="text-center">

                    <input class="btn btn-primary mt-3" type="submit" value="Save" />
                </div>
            </section>
        </div>
    </form>
</div>

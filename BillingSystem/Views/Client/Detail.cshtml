@model ClientDetail

@{
    ViewBag.Title = "Информация за клиента";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">



                <h5 class="mb-0">Име @Model.FirstName</h5>
                <p class="mb-0">Фамилия @Model.LastName</p>
                <p class="mb-0">E-mail @Model.Email</p>
                <p class="mb-0">Телефон @Model.PhoneNumber</p>
                <p class="mb-0">Адрес @Model.Address</p>
             
       

          <a href="/Book/Edit/@Model.Id" class="btn">Edit</a> 

    
</div>
@model ClientDetail

@{
    ViewBag.Title = "Информация за клиента";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-start">

    <p class="mb-0 text-start">Име @Model.FirstName</p>
    <p class="mb-0 text-start">Фамилия @Model.LastName</p>
    <p class="mb-0 text-start">E-mail @Model.Email</p>
    <p class="mb-0 text-start">Телефон @Model.PhoneNumber</p>
    <p class="mb-0 text-start">Адрес @Model.Address</p>

    <a href ="/Book/Edit/@Model.Id"  class="btn btn-primary " tabindex="-1" role="button" aria-disabled="true">Edit</a>

    

</div>
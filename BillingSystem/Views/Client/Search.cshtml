@model ClientDetail

@{
    ViewBag.Title = "Търсене на клиент";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<form class="input-group" asp-controller="Client" asp-action="Search" asp-route-id="@Model.Id">
    <i class="fas fa-search" aria-hidden="true"></i>
    <input asp-for="CivilNumber" class="form-control form-control-sm ml-2 w-20" type="text" placeholder="ЕГН..."
           aria-label="Search">
    <span asp-validation-for="@Model.CivilNumber" class="small text-danger"></span>
    <input type="submit" class="btn btn-info" value="Търсене">  
</form>
